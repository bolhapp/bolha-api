{
  "name": "bolha",
  "version": "1.0",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "build": "tsc && tsc-alias",
    "lint": "eslint 'src/app.ts'",
    "script": "ts-node -r tsconfig-paths/register ",
    "db:ui": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "yarn db:generate && drizzle-kit migrate",
    "db:drop-migration": "drizzle-kit drop",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org bolha-2e --project api ./dist && sentry-cli sourcemaps upload --org bolha-2e --project api ./dist"
  },
  "engines": {
    "node": ">= v22.14.0"
  },
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@getbrevo/brevo": "^2.2.0",
    "@koa/bodyparser": "^5.1.1",
    "@koa/cors": "^5.0.0",
    "@koa/multer": "^3.0.2",
    "@koa/router": "^13.1.0",
    "@sentry/cli": "^2.42.1",
    "@sentry/node": "^9.1.0",
    "@sentry/profiling-node": "^9.1.0",
    "argon2": "^0.41.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.39.3",
    "helmet": "^8.0.0",
    "i18n": "^0.15.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.4",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^8.0.1",
    "koa-passport": "^6.0.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "sharp": "^0.33.5",
    "tsc": "^2.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@types/i18n": "^0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9",
    "@types/koa": "^2.15.0",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-passport": "^6",
    "@types/koa__cors": "^5",
    "@types/koa__multer": "^2.0.7",
    "@types/koa__router": "^12",
    "@types/mime-types": "^2",
    "@types/multer": "^1",
    "@types/node": "^22.13.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4",
    "@types/pg": "^8.11.11",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
