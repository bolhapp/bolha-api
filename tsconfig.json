{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node10",
    "strict": true,
    "noEmit": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["./src/env.d.ts"]
  },
  "exclude": ["node_modules", "dist"]
}
